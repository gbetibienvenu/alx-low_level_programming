#include <stdio.h>
#include <string.h>

int check_password(char *password)
{
	size_t password_len;
	int retval, index;

	password_len = strlen(password);
	if (password_len == 4)
	{
		for (index = 0; index < 4; index++)
		{
			if (password[index] != (0x46c6f48U >> ((index & 3) << 3) & 0xff))
				return (0);
		}
		retval = 1;
	}
	else
		retval = 0;

	return (retval);
}

int main (int argc, char *argv[])
{
	int retval;
	int res;

	if (argc == 2)
	{
		retval = check_password(argv[1]);
		if (retval == 1)
		{
			printf("Congratulations!");
			res = 0;
		}
		else
		{
			printf("ko");
			res = 1;
		}
	}
	else
	{
		fprintf(stderr, "Usage: %s password\n", *argv);
		res = 1;
	}
	return (res);
}

